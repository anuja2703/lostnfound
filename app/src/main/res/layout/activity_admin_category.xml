<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView

        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"

        android:text="ADD NEW PRODUCT"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"

        android:gravity="center_horizontal" />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/guitar"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:src="@drawable/guitar"

            />
        <ImageView
            android:id="@+id/drum"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/drum"

            />




    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">
        <ImageView
            android:id="@+id/piano"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/piano"

            />
        <ImageView
            android:id="@+id/harmonium"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:src="@drawable/harmonium"

            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">
        <ImageView
            android:id="@+id/veena"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/veena"

            />
        <ImageView
            android:id="@+id/drum1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/drum1"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear4_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear3_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/flute"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:src="@drawable/flute"

            />

        <ImageView
            android:id="@+id/bugle"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:src="@drawable/bugle"

            />





    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear5_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear4_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/cymbal"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:src="@drawable/cymbal"

            />

        <ImageView
            android:id="@+id/tabla"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:src="@drawable/tabla"

            />




    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear6_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear5_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">



    </LinearLayout>


</RelativeLayout>